/**app.wxss**/
page{
    height: 100%;
}
.form .row{
    display: flex;
    font-size: 28rpx;
    padding: 20rpx 0;
}
.form .row .required {
    color: red;
    padding-right: 8rpx;
}
.form .row .label{
    width: 200rpx;
    padding-right: 40rpx;
    display: flex;
    align-items: center;
}
.form .row input{
    border: 1rpx solid #d9d9d9;
    padding: 5rpx 10rpx;
    border-radius: 8rpx;
}
.form .footer{
    display: flex;
    justify-content: center;
    padding-top: 40rpx;
}
.form .footer button{
    width: 250rpx;
    font-size: 28rpx;
}
.repairList .item{
    display: flex;
    align-items: center;
    padding: 20rpx 10rpx;
}
.repairList .item:not(:last-child){
    border-bottom: 1rpx dashed #d9d9d9;
}
.repairList .item .left{
    width: 150rpx;
    color: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-size: 38rpx;
    position: relative;
}
.repairList .item .left image{
    width: 100%;
}
.repairList .item .left .left-text{
    z-index: 5;
    transform: translate(-50%,0);
    left: 50%;
    top: 5rpx;
    position:absolute;
}
.repairList .item .left .left-text{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.repairList .item .left .left-text view{
    box-sizing: border-box;
    white-space: nowrap;
}
.repairList .item .left .left-text view:nth-child(2){
    margin: 0 10rpx;
    padding-bottom: 10rpx;
    border-bottom: 1rpx solid #fff;
}
.repairList .item .left view:nth-child(2){
    padding-top: 10rpx;
}
.repairList .item .info{
    font-size: 28rpx;
    padding: 0 20rpx;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    max-width: 580rpx;
    box-sizing: border-box;
}
.repairList .item .info .info-item{
    display: flex;
    justify-content: space-between;
}
.repairList .item .info .info-item:not(:last-child){
    padding-bottom: 5rpx;
}
.red{
    color: #ff0000;
}
.blue{
    color: #409EFF;
}
.green{
    color: #09bb07;
}
.empty{
    padding: 50rpx 0;
    text-align: center;
    font-size: 28rpx;
}
.empty image{
    width: 40%;
}