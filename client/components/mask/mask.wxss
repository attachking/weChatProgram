/* components/mask/mask.wxss */
.mask{
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    animation: myfirst .3s linear;
}
.container{
    background: #fff;
    animation: mysecond .3s linear;
    border-radius: 10rpx;
}
@keyframes myfirst{
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}
@keyframes mysecond{
  0% {
    transform: scale(0)
  }
  80% {
    transform: scale(1.1)
  }
  100% {
    transform: scale(1)
  }
}