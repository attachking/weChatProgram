.total{
    display: flex;
    align-items: center;
    height: 80rpx;
    border-bottom: 1rpx solid #d9d9d9;
}
.total .top-item{
    flex: 1;
    text-align: center;
    font-size: 28rpx;
}
.total .top-item:not(:last-child){
    border-right: 1rpx solid #d9d9d9;
}
.list{
    display: flex;
    flex-wrap: wrap;
}
.item{
    width: 50%;
    height: 440rpx;
}
.item:nth-child(2n-2) .content{
    border-bottom: 1rpx solid #d9d9d9;
}
.item:nth-child(2n-1) .content{
    border-right: 1rpx solid #d9d9d9;
    border-bottom: 1rpx solid #d9d9d9;
}
.item .content{
    padding: 40rpx 20rpx;
    height: 100%;
    box-sizing: border-box;
}
.item .content .title{
    margin: 0 auto;
    font-size: 32rpx;
    text-align: center;
    color: #2379b7;
    position: relative;
    height: 60rpx;
    width: 200rpx;
}
.item .content .title image{
    width: 100%;
    height: 100%;
}
.item .content .title .text{
    width: 100%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}
.item .content .canvas{
    width: 200rpx;
    height: 200rpx;
    margin: 10rpx auto;
}
.item .content .footer{
    display: flex;
    justify-content: space-between;
}
.item .content .footer .msg{
    width: 160rpx;
    background: #f3f3f3;
    box-sizing: border-box;
    padding: 10rpx 10rpx;
    font-size: 28rpx;
    display: flex;
    flex-direction: column;
    text-align: center;
}